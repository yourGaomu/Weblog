<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangzc.blog.blogcommon.Mapper.TArticleMapper">

    <resultMap id="BaseResultMap" type="com.zhangzc.blog.blogcommon.pojo.domain.TArticle">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="cover" column="cover" jdbcType="VARCHAR"/>
            <result property="summary" column="summary" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="readNum" column="read_num" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,title,cover,
        summary,create_time,update_time,
        is_deleted,read_num
    </sql>
    <select id="CountAllArticleRead" resultType="java.lang.Long">
        SELECT SUM(read_num) FROM t_article WHERE read_num > 0;
    </select>
</mapper>
